<body>
  <div class="wrap" role="main">

    <div class="header">
      <div class="brand">
        <div class="logo" aria-hidden="true">
          <!-- simple orchid glyph -->
          <svg viewBox="0 0 64 64" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <g transform="translate(6 6)">
              <path d="M22 2c5 0 9 10 9 15s-4 9-9 9-9-4-9-9S17 2 22 2z" fill="#fff" opacity="0.12" />
              <path d="M22 2c5 0 9 10 9 15s-4 9-9 9-9-4-9-9S17 2 22 2z" stroke="#fff" stroke-width="1.6" opacity="0.6"/>
              <circle cx="22" cy="13" r="2" fill="#fff"/>
              <path d="M8 30c6-8 28-8 28 0s-8 14-14 14S8 38 8 30z" fill="#fff" opacity="0.04"/>
            </g>
          </svg>
        </div>
        <div>
          <h1>Festival Lomba — Orchid Blossom</h1>
          <p class="lead">Temukan kategori lomba — desain modern bertema bunga &amp; anggrek. Klik kartu untuk melihat detail.</p>
        </div>
      </div>

      <div class="controls">
        <input class="search" id="search" placeholder="Cari kategori (mis. Musik, Fotografi, Sains)..." aria-label="Cari kategori" />
        <div class="filters">
          <button class="btn" data-filter="all">Semua</button>
          <button class="btn" data-filter="creative">Kreatif</button>
          <button class="btn" data-filter="sport">Olahraga</button>
          <button class="btn" data-filter="tech">Teknologi</button>
          <button class="btn primary" id="newCategoryBtn">+ Tambah</button>
        </div>
      </div>
    </div>

    <div class="grid" id="grid">
      <!-- Cards will be injected by JS -->
    </div>

    <!-- Floral SVG backdrop -->
    <svg class="floral-backdrop" viewBox="0 0 500 500" aria-hidden="true">
      <defs>
        <linearGradient id="g1" x1="0" x2="1">
          <stop offset="0%" stop-color="#ffd6ea"/>
          <stop offset="50%" stop-color="#c7b9ff"/>
          <stop offset="100%" stop-color="#9ad3ff"/>
        </linearGradient>
      </defs>
      <g transform="translate(20,20) scale(1.1)">
        <path d="M380 40c10 38-20 70-60 84-40 14-72 6-108 36-36 30-28 70-82 84-54 14-74-24-118-10" stroke="url(#g1)" stroke-width="4" fill="none" opacity="0.16"/>
        <g transform="translate(280,40) rotate(20)">
          <ellipse cx="32" cy="24" rx="34" ry="20" fill="#fff" opacity="0.06"/>
          <path d="M12 10c8-8 28-10 36 0 10 12 2 28-8 36s-18 6-26 0-12-22-2-36z" fill="#ff7ab6" opacity="0.6"/>
          <path d="M18 22c6-4 16-6 22 0 6 6 2 14-4 18s-10 2-14 0-8-10-4-18z" fill="#6b46ff" opacity="0.9"/>
        </g>
      </g>
    </svg>

    <div class="floaters" aria-hidden="true">
      <div class="floater"></div>
    </div>

    <!-- Modal -->
    <div id="modalBackdrop" class="modal-backdrop" aria-hidden="true">
      <div class="modal" role="dialog" aria-modal="true" aria-labelledby="modalTitle">
        <h2 id="modalTitle">Detail Kategori</h2>
        <p id="modalDesc">Deskripsi kategori akan muncul di sini.</p>
        <div style="display:flex;gap:8px;margin-top:12px;justify-content:flex-end">
          <button class="btn" id="closeModal">Tutup</button>
          <button class="btn primary" id="register">Daftar</button>
        </div>
      </div>
    </div>

    <!-- small petals -->
    <div class="petal" style="right:18px;top:80px;transform:rotate(8deg);"></div>
    <div class="petal" style="left:18px;bottom:60px;transform:rotate(-20deg);width:70px;height:70px;opacity:.12"></div>

  </div>

  <script>
    // Sample data
    const categories = [
      {id:1, title:'Lomba Fotografi: Keindahan Alam', type:'creative', desc:'Tangkap keindahan alam lokal dengan tema konservasi.'},
      {id:2, title:'Kompetisi Robotics', type:'tech', desc:'Bersaing membuat robot penyelesai tugas otomatis.'},
      {id:3, title:'Festival Musik Indie', type:'creative', desc:'Band / solo performer menampilkan karya orisinal.'},
      {id:4, title:'Lomba Catur Pelajar', type:'sport', desc:'Turnamen catur cepat untuk pelajar.'},
      {id:5, title:'Hackathon EduTech', type:'tech', desc:'Bangun prototipe solusi pendidikan dalam 48 jam.'},
      {id:6, title:'Lomba Desain Busana Ramah Lingkungan', type:'creative', desc:'Desain fashion memakai bahan daur ulang.'},
      {id:7, title:'Maraton Mini 5K', type:'sport', desc:'Lomba lari sehat untuk umum.'}
    ];

    const grid = document.getElementById('grid');
    const modalBackdrop = document.getElementById('modalBackdrop');
    const modalTitle = document.getElementById('modalTitle');
    const modalDesc = document.getElementById('modalDesc');
    const closeModal = document.getElementById('closeModal');
    const registerBtn = document.getElementById('register');

    // Utilities
    function createCard(item){
      const el = document.createElement('article');
      el.className = 'card';
      el.setAttribute('tabindex','0');
      el.dataset.type = item.type;
      el.innerHTML = `
        <div class="top">
          <div class="thumb" aria-hidden="true">${item.title.split(' ').slice(0,2).map(w=>w[0]).join('').toUpperCase()}</div>
          <div>
            <h3>${item.title}</h3>
            <p>${item.desc}</p>
            <div class="meta">
              <span class="tag">${item.type.toUpperCase()}</span>
              <span class="tag">ID: ${item.id}</span>
              <button class="join-btn cta" data-id="${item.id}">Lihat</button>
            </div>
          </div>
        </div>
      `;

      // keyboard accessible open
      el.addEventListener('keydown', (e)=>{ if(e.key==='Enter' || e.key===' ') { openModal(item); e.preventDefault(); } });

      // simple tilt on mouse move
      el.addEventListener('mousemove', (ev)=>{
        const rect = el.getBoundingClientRect();
        const x = (ev.clientX - rect.left) / rect.width - 0.5;
        const y = (ev.clientY - rect.top) / rect.height - 0.5;
        el.style.transform = `translateY(-6px) scale(1.02) rotateX(${y*6}deg) rotateY(${x*6}deg)`;
      });
      el.addEventListener('mouseleave', ()=>{ el.style.transform = '' });

      // button inside
      el.querySelector('.cta').addEventListener('click', (e)=>{ e.stopPropagation(); openModal(item); });

      return el;
    }

    // Render initial
    function render(items){
      grid.innerHTML = '';
      items.forEach(i=> grid.appendChild(createCard(i)));
      observeReveal();
    }

    render(categories);

    // Reveal animation using IntersectionObserver
    function observeReveal(){
      const cards = document.querySelectorAll('.card');
      const io = new IntersectionObserver((entries)=>{
        entries.forEach(ent=>{
          if(ent.isIntersecting){ ent.target.classList.add('revealed'); io.unobserve(ent.target); }
        });
      },{threshold:0.12});
      cards.forEach(c=> io.observe(c));
    }

    // Filters
    document.querySelectorAll('[data-filter]').forEach(btn=>{
      btn.addEventListener('click', ()=>{
        const f = btn.dataset.filter;
        document.querySelectorAll('.btn').forEach(b=> b.classList.remove('active'));
        btn.classList.add('active');
        if(f==='all') render(categories);
        else render(categories.filter(c=>c.type===f));
      });
    });

    // Search
    document.getElementById('search').addEventListener('input', (e)=>{
      const q = e.target.value.trim().toLowerCase();
      if(!q) render(categories);
      else render(categories.filter(c=> (c.title + ' ' + c.desc).toLowerCase().includes(q)));
    });

    // Modal control
    function openModal(item){
      modalBackdrop.classList.add('open');
      modalBackdrop.setAttribute('aria-hidden','false');
      modalTitle.textContent = item.title;
      modalDesc.textContent = item.desc + ' — (contoh syarat: tim 1-3 orang, batas usia, hadiah menarik)';
      registerBtn.onclick = ()=>{ alert('Terima kasih! Pendaftaran untuk: "'+item.title+'" akan diarahkan (contoh).') }
    }
    function close(){ modalBackdrop.classList.remove('open'); modalBackdrop.setAttribute('aria-hidden','true'); }
    closeModal.addEventListener('click', close);
    modalBackdrop.addEventListener('click', (e)=>{ if(e.target === modalBackdrop) close(); });

    // Simple "Tambah" action to show creation UI (demo)
    document.getElementById('newCategoryBtn').addEventListener('click', ()=>{
      const title = prompt('Nama kategori baru (contoh: Lomba Seni Lukis)');
      if(title){
        const id = Math.max(...categories.map(c=>c.id)) + 1;
        const newItem = {id, title, type:'creative', desc:'Deskripsi singkat untuk '+title};
        categories.unshift(newItem);
        render(categories);
      }
    });

    // small animation for heading
    window.addEventListener('load', ()=>{
      document.querySelectorAll('.fade-up').forEach(e=>e.classList.add('show'));
    });

    // Accessibility: trap focus inside modal when open
    document.addEventListener('keydown', (e)=>{
      if(e.key==='Escape') close();
    });

    // small flourish: cycle floaters color
    let hue = 220;
    setInterval(()=>{
      hue = (hue + 3) % 360;
      document.querySelector('.floater').style.background = `radial-gradient(circle at 20% 20%, hsla(${hue},90%,95%,0.9), hsla(${(hue+60)%360},90%,85%,0.06))`;
    }, 2600);

  </script>
</body>
</html>
