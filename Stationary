    /* Header */
    .header{
      display:flex;align-items:center;gap:18px;margin-bottom:18px;
    }
    .brand{
      display:flex;align-items:center;gap:12px;
    }
    .logo{
      width:68px;height:68px;border-radius:14px;background:conic-gradient(from 120deg,#fff0 0,#fff0), var(--accent-1);
      box-shadow:var(--shadow);display:flex;align-items:center;justify-content:center;position:relative;overflow:hidden;
    }
    /* simple orchid-ish SVG mark */
    .logo svg{width:44px;height:44px;transform:translateY(-2px)}
    h1{font-size:20px;margin:0;font-weight:700;color:#1a1436}
    p.lead{margin:0;color:rgba(26,20,54,0.7);font-size:13px}

    /* Controls */
    .controls{margin-left:auto;display:flex;gap:10px;align-items:center}
    .search{
      padding:10px 14px;border-radius:12px;border:none;outline:none;background:rgba(255,255,255,0.8);
      box-shadow:var(--shadow);min-width:260px;font-size:14px
    }
    .filters{display:flex;gap:8px}
    .btn{padding:10px 14px;border-radius:12px;border:none;background:var(--glass);cursor:pointer;backdrop-filter: blur(6px);box-shadow:var(--shadow);font-weight:600}
    .btn.primary{background:linear-gradient(90deg,var(--accent-2),var(--accent-1));color:white}

    /* Category grid */
    .grid{display:grid;grid-template-columns:repeat(3,1fr);gap:18px;margin-top:22px}

    .card{
      background:var(--card-grad);border-radius:16px;padding:18px;position:relative;overflow:hidden;box-shadow:var(--shadow);
      transform:translateY(12px);opacity:0;transition:transform .6s cubic-bezier(.2,.9,.2,1),opacity .6s;
      border:1px solid rgba(255,255,255,0.65);
    }
    .card.revealed{transform:none;opacity:1}
    .card .top{display:flex;align-items:flex-start;gap:12px}
    .thumb{width:84px;height:84px;border-radius:12px;flex-shrink:0;background:linear-gradient(135deg,var(--accent-3),var(--accent-1));display:flex;align-items:center;justify-content:center;color:white;font-weight:700;font-size:20px;box-shadow:0 8px 24px rgba(107,70,255,0.15)}
    .card h3{margin:0;font-size:16px}
    .card p{margin:6px 0 0 0;color:rgba(26,20,54,0.65);font-size:13px}

    .meta{margin-top:12px;display:flex;gap:8px;align-items:center}
    .tag{padding:6px 10px;border-radius:999px;background:rgba(20,20,40,0.04);font-size:12px}

    /* Fancy floral accent in corner using SVG */
    .floral-backdrop{position:absolute;right:-60px;top:-60px;width:420px;height:420px;pointer-events:none;opacity:.95}

    /* Card hover micro-interactions */
    .card:hover{transform:translateY(-6px) scale(1.02);box-shadow:0 18px 48px rgba(18,25,40,0.12)}
    .card .cta{margin-left:auto}
    .join-btn{padding:8px 12px;border-radius:10px;border:none;background:linear-gradient(90deg,var(--accent-1),var(--accent-3));color:white;font-weight:700;cursor:pointer}

    /* Modal */
    .modal-backdrop{position:fixed;inset:0;background:rgba(10,8,20,0.45);display:flex;align-items:center;justify-content:center;opacity:0;pointer-events:none;transition:opacity .25s}
    .modal-backdrop.open{opacity:1;pointer-events:auto}
    .modal{width:720px;max-width:92vw;border-radius:14px;background:linear-gradient(180deg,rgba(255,255,255,0.98),rgba(255,255,255,0.95));padding:22px}

    /* Responsive */
    @media (max-width:980px){.grid{grid-template-columns:repeat(2,1fr)}}
    @media (max-width:640px){.grid{grid-template-columns:1fr}.controls{flex-direction:column;align-items:stretch}.search{width:100%}}

    /* small floating dots animation */
    .floaters{position:absolute;left:-80px;bottom:-60px;pointer-events:none}
    .floater{width:180px;height:180px;border-radius:50%;background:radial-gradient(circle at 20% 20%, rgba(255,255,255,0.65), rgba(255,255,255,0.08));filter:blur(18px);opacity:.9}

    /* subtle entrance animation for headings */
    .fade-up{opacity:0;transform:translateY(10px);transition:all .6s cubic-bezier(.2,.9,.2,1)}
    .fade-up.show{opacity:1;transform:none}

    /* small decorative orchid petals (CSS shapes) */
    .petal{position:absolute;width:96px;height:96px;border-radius:50%;background:linear-gradient(120deg,var(--accent-3),var(--accent-1));filter:blur(6px);opacity:.18;transform:rotate(-14deg)}

